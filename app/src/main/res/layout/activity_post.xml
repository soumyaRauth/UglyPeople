<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_post"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.soumya.uglypeople.PostActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:background="@drawable/input_outline"
        android:padding="15dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:ems="10"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:id="@+id/titleField"
        android:hint="Give it a title.."
        tools:ignore="HardcodedText" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/input_outline"
        android:padding="15dp"
        android:ems="10"
        android:layout_below="@+id/titleField"
        android:layout_centerHorizontal="true"
        android:id="@+id/descriptionField"
        android:hint="Post Description"
        tools:ignore="HardcodedText" />

    <Button
        android:text="Submit Post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/submitPost"
        android:background="@color/colorPrimary"
        android:textColor="@color/cardview_light_background"
        tools:ignore="HardcodedText" />

    <!--<TextView-->
        <!--android:text="@string/click_the_image_to_change_the_image"-->
        <!--android:textStyle="italic"-->
        <!--android:gravity="center"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:id="@+id/changeImage"-->
        <!--android:layout_above="@+id/titleField"-->
        <!--android:layout_centerHorizontal="true" />-->

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="280dp"
        app:srcCompat="@mipmap/image_upload"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:padding="0dp"

        android:id="@+id/imageView" />


</RelativeLayout>
